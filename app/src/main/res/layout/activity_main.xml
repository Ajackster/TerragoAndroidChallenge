<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    >


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:id="@+id/topPanel"
        android:background="#dadada"
        android:layout_alignTop="@+id/listview"
        android:layout_alignStart="@+id/prettyCoolTxt" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:divider="#dadada"
        android:dividerHeight="1dip"
        />

    <TextView
        android:id="@+id/chckOutTableTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Check out my responsive table."
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:layout_marginStart="5dp"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/prettyCoolTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pretty cool right?"
        android:layout_below="@+id/chckOutTableTxt"
        android:layout_alignStart="@+id/chckOutTableTxt"
        android:textSize="20sp"
        android:paddingTop="2dp"
        android:textIsSelectable="false"
         />


</RelativeLayout>